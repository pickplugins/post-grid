{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "post-grid/flex-wrap",
  "title": "Flex Maker",
  "textdomain": "post-grid",
  "category": "post-grid-tools",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "pg-flex-wrap"
        },
        "styles": {
          "display": {
            "Desktop": "flex"
          },
          "gap": {
            "Desktop": "1em"
          }
        }
      }
    },
    "item": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "pg-flex-wrap-item"
        },
        "styles": {}
      }
    },
    "visible": {
      "type": "object",
      "default": {}
    },
    "blockId": {
      "type": "string",
      "default": ""
    },
    "blockCssY": {
      "type": "object",
      "default": {
        "items": {}
      }
    }
  },
  "script": "front_script",
  "keywords": [
    "flex wrapper",
    "flex layout",
    "flex wordpress",
    "flex block for wordpress"
  ],
  "description": "The flex wrapper provides dynamic control over content organization within a responsive layout."
}