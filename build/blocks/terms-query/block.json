{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "post-grid/terms-query",
  "title": "Terms Query",
  "textdomain": "post-grid",
  "category": "post-grid-tools",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "class": "pg-terms-query"
        },
        "styles": {
          "display": {
            "Desktop": "block"
          }
        }
      }
    },
    "taxonomies": {
      "type": "object",
      "default": {
        "options": {
          "taxName": ""
        }
      }
    },
    "itemsWrap": {
      "type": "object",
      "default": {
        "options": {
          "excludedWrapper": ""
        },
        "styles": {}
      }
    },
    "itemWrap": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "item",
          "counterClass": true,
          "termsClass": true,
          "oddEvenClass": true
        },
        "styles": {}
      }
    },
    "queryArgs": {
      "type": "object",
      "default": {
        "items": []
      }
    },
    "blockCssY": {
      "type": "object",
      "default": {
        "items": {}
      }
    },
    "blockId": {
      "type": "string",
      "default": ""
    }
  },
  "script": "front_script",
  "keywords": [
    "terms list",
    "term list",
    "taxonomy term list",
    "category list",
    "categories list",
    "tag list",
    "tags list",
    "taxonomy list",
    "taxonomies list",
    "terms list block",
    "terms list for wordpress",
    "terms list block for wordpress"
  ],
  "description": "The terms list block displays a list of specific terms, providing a quick reference for readers."
}