{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "post-grid/post-tags",
  "title": "Post Tags",
  "textdomain": "post-grid",
  "category": "post-grid-post",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "class": "pg-post-tags",
          "tag": "div"
        },
        "styles": {}
      }
    },
    "items": {
      "type": "object",
      "default": {
        "options": {
          "prefix": "",
          "postfix": "",
          "linkTo": "termUrl",
          "linkToCustomMeta": "",
          "linkToAuthorMeta": "",
          "customUrl": "",
          "maxCount": 99,
          "postCount": false,
          "class": " item",
          "linkTarget": "",
          "linkAttr": []
        },
        "styles": {}
      }
    },
    "icon": {
      "type": "object",
      "default": {
        "options": {
          "library": "fontAwesome",
          "srcType": "class",
          "iconSrc": "",
          "position": "beforeFronttext",
          "class": "icon"
        },
        "styles": {
          "color": {
            "Desktop": "#000000"
          },
          "fontSize": {
            "Desktop": "18px"
          }
        }
      }
    },
    "separator": {
      "type": "object",
      "default": {
        "options": {
          "class": "",
          "text": ", "
        },
        "styles": {}
      }
    },
    "termTitle": {
      "type": "object",
      "default": {
        "options": {
          "class": "",
          "text": ", "
        },
        "styles": {
          "color": {
            "Desktop": "#0000ff"
          },
          "fontSize": {
            "Desktop": "18px"
          },
          "fontFamily": {
            "Desktop": "Poppins"
          },
          "fontStyle": {
            "Desktop": "normal"
          },
          "fontWeight": {
            "Desktop": "400"
          }
        }
      }
    },
    "frontText": {
      "type": "object",
      "default": {
        "options": {
          "text": "Tags: ",
          "class": ""
        },
        "styles": {}
      }
    },
    "postCount": {
      "type": "object",
      "default": {
        "options": {
          "class": "",
          "text": ", "
        },
        "styles": {
          "margin": {
            "Desktop": "0px 10px 0px 10px"
          }
        }
      }
    },
    "utmTracking": {
      "type": "object",
      "default": {
        "enable": false,
        "id": "",
        "source": "",
        "medium": "",
        "campaign": "",
        "term": "",
        "content": ""
      }
    },
    "visible": {
      "type": "object",
      "default": {}
    },
    "blockCssY": {
      "type": "object",
      "default": {
        "items": {}
      }
    },
    "blockId": {
      "type": "string",
      "default": ""
    }
  },
  "script": "front_script",
  "keywords": [
    "tag",
    "tags",
    "post tag",
    "tags block",
    "post tags",
    "post tags block",
    "post tag block",
    "post tag for wordpress",
    "post tag block for wordpress"
  ],
  "description": "The post tag block displays tags or keywords associated with a blog post"
}