{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "post-grid/text",
  "title": "Text",
  "textdomain": "post-grid",
  "category": "post-grid-tools",
  "usesContext": [],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "example": {},
  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "pg-text-wrapper"
        },
        "styles": {}
      }
    },
    "text": {
      "type": "object",
      "default": {
        "options": {
          "content": "Hello World!",
          "src": "",
          "tag": "div",
          "class": "pg-text",
          "id": "",
          "limitBy": "",
          "limitCount": 99
        },
        "styles": {}
      }
    },
    "prefix": {
      "type": "object",
      "default": {
        "options": {
          "text": "",
          "class": "prefix",
          "position": "beforebegin "
        },
        "styles": {}
      }
    },
    "postfix": {
      "type": "object",
      "default": {
        "options": {
          "text": "",
          "class": "postfix",
          "position": "afterend"
        },
        "styles": {
          "color": {
            "Desktop": "#000000 !important"
          },
          "fontSize": {
            "Desktop": "18px"
          },
          "fontFamily": {
            "Desktop": "Poppins"
          },
          "fontStyle": {
            "Desktop": "normal"
          },
          "fontWeight": {
            "Desktop": "400"
          },
          "margin": {
            "Desktop": "0px 0px 0px 10px"
          }
        }
      }
    },
    "other": {
      "type": "object",
      "default": {
        "options": {
          "copyObj": "",
          "copyContent": ""
        }
      }
    },
    "visible": {
      "type": "object",
      "default": {}
    },
    "animateOn": {
      "type": "object",
      "default": {}
    },
    "tilt": {
      "type": "object",
      "default": {}
    },
    "tooltip": {
      "type": "object",
      "default": {}
    },
    "typingText": {
      "type": "object",
      "default": {}
    },
    "lazyLoad": {
      "type": "object",
      "default": {
        "options": {
          "lazy": true,
          "lazySrc": "",
          "lazySrcId": "",
          "lazySrcType": "media"
        }
      }
    },
    "blockId": {
      "type": "string",
      "default": ""
    },
    "blockCssY": {
      "type": "object",
      "default": {
        "items": {}
      }
    }
  },
  "script": "front_script",
  "keywords": [
    "advanced text",
    "rich text",
    "text",
    "text block"
  ],
  "description": "The text block is a basic element used for displaying and formatting text content on a webpage."
}