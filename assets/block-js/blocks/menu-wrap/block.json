{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "post-grid/menu-wrap",
  "title": "Menu Maker",
  "textdomain": "post-grid",
  "category": "post-grid-tools",
  "usesContext": [
    "postId",
    "loopIndex",
    "postType",
    "queryId"
  ],
  "supports": {
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "wrapper": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "pg-menu-wrap"
        },
        "styles": {
          "display": {
            "Desktop": "flex"
          }
        }
      }
    },
    "mobileMenuWrap": {
      "type": "object",
      "default": {
        "options": {
          "tag": "div",
          "class": "mobile-menu-wrap"
        },
        "styles": {}
      }
    },
    "menuWrap": {
      "type": "object",
      "default": {
        "options": {
          "tag": "ul",
          "class": "pg-menu"
        },
        "styles": {
          "display": {
            "Desktop": "flex"
          }
        }
      }
    },
    "subMenuWrap": {
      "type": "object",
      "default": {
        "options": {
          "class": "pg-sub-menu",
          "type": ""
        },
        "styles": {
          "backgroundColor": {
            "Desktop": ""
          }
        }
      }
    },
    "link": {
      "type": "object",
      "default": {
        "options": {
          "class": "pg-menu-link"
        },
        "styles": {
          "backgroundColor": {
            "Desktop": ""
          }
        }
      }
    },
    "icon": {
      "type": "object",
      "default": {
        "options": {
          "class": "pg-menu-icon"
        },
        "styles": {
          "fontSize": {
            "Desktop": "18px"
          },
          "margin": {
            "Desktop": "0px 10px 0px 0px"
          }
        }
      }
    },
    "mobileMenuToggle": {
      "type": "object",
      "default": {
        "options": {
          "class": "mobile-menu-toggle",
          "library": "fontAwesome",
          "srcType": "class",
          "iconSrc": "fas fa-chevron-right",
          "position": ""
        },
        "styles": {
          "fontSize": {
            "Desktop": "18px"
          },
          "margin": {
            "Desktop": "0px 10px 0px 0px"
          }
        }
      }
    },
    "mobileMenuClose": {
      "type": "object",
      "default": {
        "options": {
          "class": "mobile-menu-close",
          "library": "fontAwesome",
          "srcType": "class",
          "iconSrc": "fas fa-chevron-right",
          "position": ""
        },
        "styles": {
          "fontSize": {
            "Desktop": "18px"
          },
          "margin": {
            "Desktop": "0px 10px 0px 0px"
          }
        }
      }
    },
    "visible": {
      "type": "object",
      "default": {}
    },
    "blockId": {
      "type": "string",
      "default": ""
    },
    "blockCssY": {
      "type": "object",
      "default": {
        "items": {}
      }
    }
  },
  "editorStyle": "pgmenu_wrap_editor_style",
  "script": "front_script",
  "keywords": [
    "menu",
    "menu block",
    "navigation block",
    "menu for wordpress",
    "menu block for wordpress"
  ],
  "description": "The menu wrap block is a container for structuring and presenting navigation menus or lists of items on a webpage, enhancing user accessibility."
}